<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="all">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nativeAd_adRequest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求广告1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nativeAd_adRequest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求广告2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nativeAd_adRequest1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nativeAd_adShow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示广告1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nativeAd_adShow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示广告2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nativeAd_adShow1" />

    <FrameLayout
        android:id="@+id/nativeAd_flAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>